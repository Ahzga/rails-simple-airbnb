<div class="d-flex flex-column align-items-center">
  <div class="card m-4" style=" width : 30rem;">
    <h2><%= @flat.name %></h2>
    <h5><%= @flat.address %></h5>
  </div>

  <div class="card m-4" style=" width : 30rem;">
    <h4>A bit more about this flat...</h4>
    <p><%= @flat.description %></p>
  </div>

  <div class="card m-4" style=" width : 30rem;">
    <h4>Details</h4>
    <div class="d-flex justify-content-start">
          <p> <i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></p>
          <p> <i class="fas fa-dollar-sign"></i> <%= @flat.price_per_night %></p>
    </div>
  </div>
</div>
<div class="card m-4" style=" width : 20rem;">
  <h5>Book this place!</h5>
  <span class="input-group-text" id="basic-addon1">From:</span>
  <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Arrival" aria-describedby="basic-addon1">
  <span class="input-group-text" id="basic-addon1">To:</span>
  <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Departure" aria-describedby="basic-addon1">
</div>

<div class="card m-4" style=" width : 20rem;">
  <p>Share</p>
  <div class="d-flex justify-content-end">
    <i class="fab fa-twitter-square p-2"></i>
    <i class="fab fa-pinterest-square p-2"></i>
    <i class="fab fa-facebook-square p-2"></i>
  </div>
</div>
